@page "/shop/{slug}"

@using ArtisanMarket.Application.Models
@using ArtisanMarket.Application.Services
@inject ICatalogService CatalogService
@inject NavigationManager Navigation
@inject ILogger<ShopOffer> Logger

<PageTitle>Oferta Sklepu - ArtisanMarket</PageTitle>

<div class="container mt-4">
    @if (ViewModel.IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">£adowanie...</span>
            </div>
            <p class="mt-3">£adowanie oferty sklepu...</p>
        </div>
    }
    else if (ViewModel.ShopNotFound)
    {
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading">Sklep nie zosta³ znaleziony</h4>
            <p>Sklep o podanym adresie nie istnieje lub zosta³ usuniêty.</p>
            <hr>
            <p class="mb-0">
                <a href="/catalog" class="btn btn-primary">Powrót do katalogu</a>
            </p>
        </div>
    }
    else if (!string.IsNullOrEmpty(ViewModel.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">B³¹d</h4>
            <p>@ViewModel.ErrorMessage</p>
            <hr>
            <p class="mb-0">
                <a href="/catalog" class="btn btn-primary">Powrót do katalogu</a>
            </p>
        </div>
    }
    else if (ViewModel.Shop != null)
    {
        <!-- Nag³ówek sklepu -->
        <div class="mb-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/catalog">Katalog</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewModel.Shop.Name</li>
                </ol>
            </nav>

            <div class="row">
                <div class="col-lg-8">
                    <h1 class="mb-3">@ViewModel.Shop.Name</h1>
                    @if (!string.IsNullOrEmpty(ViewModel.Shop.Description))
                    {
                        <p class="lead">@ViewModel.Shop.Description</p>
                    }
                </div>
                <div class="col-lg-4">
                    @if (!string.IsNullOrEmpty(ViewModel.Shop.ContactEmail) || !string.IsNullOrEmpty(ViewModel.Shop.Phone))
                    {
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Dane kontaktowe</h5>
                            </div>
                            <div class="card-body">
                                @if (!string.IsNullOrEmpty(ViewModel.Shop.ContactEmail))
                                {
                                    <p class="mb-2">
                                        <i class="bi bi-envelope me-2"></i>
                                        <a href="mailto:@ViewModel.Shop.ContactEmail">@ViewModel.Shop.ContactEmail</a>
                                    </p>
                                }
                                @if (!string.IsNullOrEmpty(ViewModel.Shop.Phone))
                                {
                                    <p class="mb-0">
                                        <i class="bi bi-telephone me-2"></i>
                                        @ViewModel.Shop.Phone
                                    </p>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Lista produktów -->
        <div class="row">
            <div class="col-12">
                <h2 class="mb-4">Produkty</h2>

                @if (ViewModel.Products.Count == 0)
                {
                    <div class="alert alert-info" role="alert">
                        <h4 class="alert-heading">Brak produktów</h4>
                        <p>Ten sklep nie ma jeszcze produktów.</p>
                    </div>
                }
                else
                {
                    <div class="row">
                        @foreach (var product in ViewModel.Products)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">@product.Name</h5>

                                        @if (!string.IsNullOrEmpty(product.Description))
                                        {
                                            <p class="card-text flex-grow-1">@product.Description</p>
                                        }

                                        <div class="mt-auto">
                                            <div class="d-flex justify-content-between align-items-center mb-3">
                                                <span class="h4 text-primary mb-0">@product.Price.ToString("C")</span>
                                            </div>
                                            <a href="/order/@product.Id" class="btn btn-success w-100">
                                                <i class="bi bi-cart-plus me-2"></i>Zamów
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public string Slug { get; set; } = string.Empty;

    private ShopOfferViewModel ViewModel { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(Slug))
            {
                Logger.LogWarning("Próba dostêpu do strony sklepu bez podania slug");
                Navigation.NavigateTo("/catalog");
                return;
            }

            ViewModel.IsLoading = true;
            StateHasChanged();

            var shop = await CatalogService.GetShopBySlugAsync(Slug);
            var products = await CatalogService.GetShopProductsAsync(Slug);

            if (shop == null)
            {
                ViewModel.ShopNotFound = true;
            }
            else
            {
                ViewModel.Shop = shop;
                ViewModel.Products = products;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "B³¹d podczas ³adowania oferty sklepu {Slug}", Slug);
            ViewModel.ErrorMessage = "Nie uda³o siê za³adowaæ danych sklepu. Spróbuj odœwie¿yæ stronê.";
        }
        finally
        {
            ViewModel.IsLoading = false;
            StateHasChanged();
        }
    }
}
