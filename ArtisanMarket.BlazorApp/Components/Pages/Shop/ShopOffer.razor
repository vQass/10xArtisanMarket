@page "/shop/{slug}"

@using ArtisanMarket.Application.Models
@using ArtisanMarket.Application.Services
@inject ICatalogService CatalogService
@inject NavigationManager Navigation
@inject ILogger<ShopOffer> Logger

<PageTitle>Oferta Sklepu - ArtisanMarket</PageTitle>

<div class="container mt-4">
    @if (ViewModel.IsLoading)
    {
        <div class="text-center py-5">
            <FluentProgressRing />
            <p class="mt-3">Ładowanie oferty sklepu...</p>
        </div>
    }
    else if (ViewModel.ShopNotFound)
    {
        <FluentMessageBar Intent="MessageIntent.Warning">
            <strong>Sklep nie został znaleziony</strong>
            <p>Sklep o podanym adresie nie istnieje lub został usunięty.</p>
            <FluentButton Appearance="Appearance.Accent" href="/catalog">Powrót do katalogu</FluentButton>
        </FluentMessageBar>
    }
    else if (!string.IsNullOrEmpty(ViewModel.ErrorMessage))
    {
        <FluentMessageBar Intent="MessageIntent.Error">
            <strong>Błąd</strong>
            <p>@ViewModel.ErrorMessage</p>
            <FluentButton Appearance="Appearance.Accent" href="/catalog">Powrót do katalogu</FluentButton>
        </FluentMessageBar>
    }
    else if (ViewModel.Shop != null)
    {
        <!-- Nagłówek sklepu -->
        <div class="mb-4">
            <FluentBreadcrumb>
                <FluentBreadcrumbItem href="/catalog">Katalog</FluentBreadcrumbItem>
                <FluentBreadcrumbItem Current="true">@ViewModel.Shop.Name</FluentBreadcrumbItem>
            </FluentBreadcrumb>

            <div class="row">
                <div class="col-lg-8">
                    <h1 class="mb-3">@ViewModel.Shop.Name</h1>
                    @if (!string.IsNullOrEmpty(ViewModel.Shop.Description))
                    {
                        <p class="lead">@ViewModel.Shop.Description</p>
                    }
                </div>
                <div class="col-lg-4">
                    @if (!string.IsNullOrEmpty(ViewModel.Shop.ContactEmail) || !string.IsNullOrEmpty(ViewModel.Shop.Phone))
                    {
                        <FluentCard>
                            <h5 class="mb-0">Dane kontaktowe</h5>
                            <div>
                                @if (!string.IsNullOrEmpty(ViewModel.Shop.ContactEmail))
                                {
                                    <p class="mb-2">
                                        <i class="bi bi-envelope me-2"></i>
                                        <a href="mailto:@ViewModel.Shop.ContactEmail">@ViewModel.Shop.ContactEmail</a>
                                    </p>
                                }
                                @if (!string.IsNullOrEmpty(ViewModel.Shop.Phone))
                                {
                                    <p class="mb-0">
                                        <i class="bi bi-telephone me-2"></i>
                                        <a href="tel:@ViewModel.Shop.Phone">@ViewModel.Shop.Phone</a>
                                    </p>
                                }
                            </div>
                        </FluentCard>
                    }
                </div>
            </div>
        </div>

        <!-- Lista produktów -->
        <div class="row">
            <div class="col-12">
                <h2 class="mb-4">Produkty</h2>

                @if (ViewModel.Products.Count == 0)
                {
                    <FluentMessageBar Intent="MessageIntent.Info">
                        <strong>Brak produktów</strong>
                        <p>Ten sklep nie ma jeszcze produktów.</p>
                    </FluentMessageBar>
                }
                else
                {
                    <div class="row">
                        @foreach (var product in ViewModel.Products)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <FluentCard Elevation="Elevation.Two">
                                    <div class="d-flex flex-column" style="height: 100%;">
                                        <h5>@product.Name</h5>

                                        @if (!string.IsNullOrEmpty(product.Description))
                                        {
                                            <p class="flex-grow-1">@product.Description</p>
                                        }

                                        <div class="mt-auto">
                                            <div class="d-flex justify-content-between align-items-center mb-3">
                                                <span class="h4 text-primary mb-0">@product.Price.ToString("C")</span>
                                            </div>

                                            <FluentAnchor Appearance="Appearance.Accent"
                                                          Href="@($"/order/{product.Id}")"
                                                          Class="w-100">
                                                <i class="bi bi-cart-plus me-2"></i>Zamów
                                            </FluentAnchor>

                                        </div>
                                    </div>
                                </FluentCard>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public string Slug { get; set; } = string.Empty;

    private ShopOfferViewModel ViewModel { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(Slug))
            {
                Logger.LogWarning("Próba dostępu do strony sklepu bez podania slug");
                Navigation.NavigateTo("/catalog");
                return;
            }

            ViewModel.IsLoading = true;
            StateHasChanged();

            var shop = await CatalogService.GetShopBySlugAsync(Slug);
            var products = await CatalogService.GetShopProductsAsync(Slug);

            if (shop == null)
            {
                ViewModel.ShopNotFound = true;
            }
            else
            {
                ViewModel.Shop = shop;
                ViewModel.Products = products;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Błąd podczas ładowania oferty sklepu {Slug}", Slug);
            ViewModel.ErrorMessage = "Nie udało się załadować danych sklepu. Spróbuj odświeżyć stronę.";
        }
        finally
        {
            ViewModel.IsLoading = false;
            StateHasChanged();
        }
    }
}
