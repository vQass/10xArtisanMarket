@page "/"
@page "/catalog"

@using ArtisanMarket.Application.Models
@using ArtisanMarket.Application.Services
@inject ICatalogService CatalogService
@inject ILogger<Index> Logger

<PageTitle>Katalog Sklepów - ArtisanMarket</PageTitle>

<div class="container mt-4">
    <h1 class="mb-4">Katalog Sklepów</h1>

    @if (ViewModel.IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Ładowanie...</span>
            </div>
            <p class="mt-3">Ładowanie listy sklepów...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(ViewModel.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Błąd</h4>
            <p>@ViewModel.ErrorMessage</p>
            <hr>
            <p class="mb-0">Spróbuj odświeżyć stronę lub skontaktuj się z administratorem.</p>
        </div>
    }
    else if (ViewModel.Shops.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">Brak sklepów</h4>
            <p>Obecnie nie ma dostępnych sklepów w katalogu.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var shop in ViewModel.Shops)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <a href="/shop/@shop.Slug" class="text-decoration-none text-dark">
                                    @shop.Name
                                </a>
                            </h5>
                            @if (!string.IsNullOrEmpty(shop.Description))
                            {
                                <p class="card-text flex-grow-1">@shop.Description</p>
                            }
                            <a href="/shop/@shop.Slug" class="btn btn-primary mt-auto">
                                Zobacz sklep
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private CatalogViewModel ViewModel { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            ViewModel.IsLoading = true;
            StateHasChanged();

            var shops = await CatalogService.GetAllShopsAsync();
            ViewModel.Shops = shops;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Błąd podczas ładowania listy sklepów");
            ViewModel.ErrorMessage = "Nie udało się załadować listy sklepów. Spróbuj odświeżyć stronę.";
        }
        finally
        {
            ViewModel.IsLoading = false;
            StateHasChanged();
        }
    }
}

